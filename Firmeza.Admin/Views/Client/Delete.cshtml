@model Firmeza.Core.Entities.Client
@{
    ViewData["Title"] = "Eliminar Cliente";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Eliminar Cliente</h1>
    <p class="mb-4 text-danger font-weight-bold"><i class="fas fa-exclamation-triangle"></i> ¿Estás seguro de que deseas eliminar este cliente?</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Detalles del Cliente</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Documento</dt>
                <dd class="col-sm-9">@Model.Document</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Teléfono</dt>
                <dd class="col-sm-9">@Model.Phone</dd>
            </dl>

            <hr />

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Confirmar Eliminación
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
